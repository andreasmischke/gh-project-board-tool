{
  "manifest_version": 2,
  "name": "GitHub Project Board Tool",
  "version": "1.1",
  "description": "Tiny little helper for your GitHub Project Board",
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*/*/projects/*"
      ],
      "js": [
        "content-script.js"
      ]
    }
  ]
}
